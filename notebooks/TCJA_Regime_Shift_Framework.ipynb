import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Set style and precision
plt.style.use('seaborn-v0_8-muted')
%matplotlib inline

class TCJAModel:
    """
    Models corporate tax shield behavior under different U.S. tax regimes.
    Includes corrective logic for floating-point precision and EBIT floor.
    """

    def __init__(self, regime='post_2022'):
        self.regime = regime
        self.params = self._set_regime_params()

    def _set_regime_params(self):
        regimes = {
            'pre_2017': {
                'corp_tax_rate': 0.35,
                'interest_cap_pct': 1.0,
                'cap_base': 'ebitda',
                'label': 'Pre-2017 (35%)'
            },
            'tcja_early': {
                'corp_tax_rate': 0.21,
                'interest_cap_pct': 0.30,
                'cap_base': 'ebitda',
                'label': 'TCJA 2018–2021 (EBITDA)'
            },
            'post_2022': {
                'corp_tax_rate': 0.21,
                'interest_cap_pct': 0.30,
                'cap_base': 'ebit',
                'label': 'TCJA 2022+ (EBIT)'
            }
        }
        if self.regime not in regimes:
            raise ValueError(f"Invalid regime: {self.regime}")
        return regimes[self.regime]

    def _get_cap_limit(self, ebitda, da):
        cap_pct = self.params['interest_cap_pct']
        if self.regime == 'pre_2017':
            return np.inf
        
        # Ensure EBIT doesn't go below zero for the cap calculation
        base_income = ebitda if self.params['cap_base'] == 'ebitda' else max(0.0, ebitda - da)
        return cap_pct * base_income

    def calculate_tax_shield(self, debt, interest_rate, ebitda, da=0.0):
        tau = self.params['corp_tax_rate']
        interest_expense = debt * interest_rate
        cap_limit = self._get_cap_limit(ebitda, da)
        deductible_interest = min(interest_expense, cap_limit)
        return tau * deductible_interest

    def marginal_benefit_of_debt(self, debt, interest_rate, ebitda, da=0.0):
        """Returns the tax benefit of the next $1 of debt ($0.21, $0.35, or $0.00)."""
        interest_expense = debt * interest_rate
        cap_limit = self._get_cap_limit(ebitda, da)
        # Robust comparison using a small epsilon to handle float math
        return self.params['corp_tax_rate'] if (cap_limit - interest_expense) > 1e-9 else 0.0
# Simulation Parameters
EBITDA = 1000.0
DA = 400.0         # High Depreciation (e.g., heavy manufacturing)
INTEREST_RATE = 0.08
DEBT_LEVELS = np.linspace(0, 12_000, 600)

# Instantiate models and run simulation
regime_keys = ['pre_2017', 'tcja_early', 'post_2022']
results = []

for r_key in regime_keys:
    model = TCJAModel(r_key)
    for debt in DEBT_LEVELS:
        shield = model.calculate_tax_shield(debt, INTEREST_RATE, EBITDA, DA)
        mbd = model.marginal_benefit_of_debt(debt, INTEREST_RATE, EBITDA, DA)
        results.append({
            'Regime': model.params['label'],
            'Debt': debt,
            'Tax Shield ($)': shield,
            'Marginal Benefit (%)': mbd * 100
        })

df = pd.DataFrame(results)

# Verification: Calculate the "kink" points for annotations
capacity = df[df['Marginal Benefit (%)'] == 0].groupby('Regime')['Debt'].min()
print("Kink points (Max Debt Capacity) per regime:")
print(capacity)
fig, (ax1, ax2) = plt.subplots(2, 1, figsize=(12, 10), sharex=True)

# Define chronological hue order
hue_order = [
    'Pre-2017 (35%)', 
    'TCJA 2018–2021 (EBITDA)', 
    'TCJA 2022+ (EBIT)'
]

# Plot 1: Total Tax Shield Value
sns.lineplot(data=df, x='Debt', y='Tax Shield ($)', hue='Regime', 
             hue_order=hue_order, linewidth=3, ax=ax1)
ax1.set_title("Total Value of Debt Tax Shield", fontsize=14, fontweight='bold')
ax1.set_ylabel("Shield Value ($)")
ax1.grid(True, alpha=0.2)

# Plot 2: Marginal Benefit (The Step Function)
sns.lineplot(data=df, x='Debt', y='Marginal Benefit (%)', hue='Regime', 
             hue_order=hue_order, linewidth=2, linestyle='--', ax=ax2)
ax2.set_title("Marginal Tax Benefit of $1 of Debt", fontsize=14, fontweight='bold')
ax2.set_ylabel("Benefit (%)")
ax2.set_xlabel("Total Corporate Debt ($)")
ax2.grid(True, alpha=0.2)

# Dynamic Annotation for the 2022 Kink
kink_2022 = capacity.get('TCJA 2022+ (EBIT)', 0)
if kink_2022 > 0:
    ax1.annotate(f'Cap Reached: ${kink_2022:,.0f}', 
                 xy=(kink_2022, df[(df['Debt'] >= kink_2022) & (df['Regime'] == 'TCJA 2022+ (EBIT)')]['Tax Shield ($)'].iloc[0]),
                 xytext=(kink_2022 + 1000, 20),
                 arrowprops=dict(facecolor='black', arrowstyle='->'),
                 fontsize=10, fontweight='bold')

plt.tight_layout()
plt.show()
